@keyframes obelisk-fly
	0%
		transform translateY( 0px)
	100%
		transform translateY( -1000px)

@keyframes obelisk-drop-shadow
	0%
		filter drop-shadow(0px 0px 0px rgba(black,.0))
	100%
		filter drop-shadow(0px 0px 8px rgba(black,.8))

@keyframes obelisk-wing-right
	85%
		transform rotateY(0deg) 
	90%
		transform translateY(-2px)
	100%
		transform translateY(0)

@keyframes obelisk-wing-left
	100%
		transform rotateY(0) 
	90%
		transform translateY(-2px)
	100%
		transform translateY(0)
@keyframes obelisk-fire
	0%
		transform scale(0)
	95%
		transform scale(1.2)
	98%
		transform scale(.9)
	99%
		transform scale(1.1)
	100%
		transform scale(1)

.obelisk-group
	animation-name obelisk-fly
	animation-duration 1.5s
	animation-iteration-count 1
	animation-timing-function cubic-bezier(.675, .005, .245, .415)
	animation-delay 2.5s
	animation-play-state paused
	animation-fill-mode forwards
	position relative
	z-index 100
	.obelisk
		animation-name obelisk-drop-shadow
		animation-duration 2s
		animation-iteration-count 1
		animation-delay 0s
		animation-play-state paused
		animation-fill-mode forwards
	&.launch
		animation-play-state running
		.obelisk
			animation-play-state running
		.wing-left
		.wing-right
		.fire_center
		.fire_right
		.fire_left 
			svg
				animation-play-state running
			
.fires-obelisk
	.fire_center
	.fire_right
	.fire_left
		svg
			animation-name obelisk-fire 
			animation-duration 500ms
			animation-iteration-count 1 
			animation-delay 2s
			animation-play-state paused
			animation-timing-function ease-in-out
			animation-fill-mode forwards
			transform-origin top center 0
			transform scale(0)
.wings-obelisk
	.wing-left
	.wing-right
		svg
			animation-name obelisk-wing-left
			animation-duration 2s
			animation-iteration-count 1
			animation-timing-function ease-in
			animation-delay 0
			animation-play-state paused
			animation-fill-mode forwards
	.wing-right
		svg
			animation-name obelisk-wing-right
.wings-obelisk
