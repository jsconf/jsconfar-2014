// Hacker
@keyframes code_l
	0%
	5%
		transform translateX(-35px)
	15%
	20%
		transform translateX(0px)
	45% 
	100% 
		transform translateX(35px)
@keyframes dash_l
	0%
	20%
		stroke-dashoffset -242
	60% 
	100% 
		stroke-dashoffset 100
@keyframes code_r
	0%
	5%
		transform translateX(35px)
	15%
	20%
		transform translateX(0px)
	45% 
	100% 
		transform translateX(-35px)
@keyframes dash_r
	0%
	20%
		stroke-dashoffset -242
	60% 
	100% 
		stroke-dashoffset 100

